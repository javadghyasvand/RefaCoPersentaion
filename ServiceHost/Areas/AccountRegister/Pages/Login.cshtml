@page "/LoginPage"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ServiceHost.Areas.AccountRegister.Pages.LoginModel
@{
    ViewData["Title"] = "ورود";
}
@if (Model.Login != null)
{
    <div class="alert alert-danger">@Model.Login</div>
}

<div class="panel panel-color panel-primary panel-pages">
    <div class="panel-heading bg-img">
        <div class="bg-overlay"></div>
        <h3 class="text-center m-t-10 text-white">ورود به <strong>افزارآزما</strong> </h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal m-t-20" method="post" asp-antiforgery="true">
            <div class="form-group ">
                <div class="col-xs-12">
                    <input class="form-control input-lg" name="Email" type="email" required="" placeholder="ایمیل">
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    <input class="form-control input-lg" name="Password" type="password" required="" placeholder="کلمه عبور">
                </div>
            </div>

            <div class="form-group ">
                <div class="col-xs-12">
                    <div class="checkbox checkbox-primary">
                        <input id="checkbox-signup" type="checkbox">
                        <label for="checkbox-signup">
                           مرا به خاطر بسپار
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group text-center m-t-40">
                <div class="col-xs-12">
                    <button class="btn btn-primary btn-lg w-lg waves-effect waves-light" type="submit">ورود</button>
                </div>
            </div>

            @* <div class="form-group m-t-30">
                <div class="col-sm-7">
                    <a style="margin: 5px" href="recoverpw.html"><i class="fa fa-lock m-r-5"></i>فراموشی رمز</a>
                </div>
            </div> *@
        </form>
    </div>

</div>